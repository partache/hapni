{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
     "rootDir": "./",
     "resolveJsonModule": true,
     "allowJs": true,
     "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types",
    ]
  }
}
